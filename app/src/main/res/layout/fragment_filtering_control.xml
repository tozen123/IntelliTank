<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.Control.FilteringControlFragment"
    android:padding="10dp"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/headerTextView"
        >
        <LinearLayout
            android:id="@+id/filteringControlGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:padding="10dp"


            android:background="@drawable/rounded_background_outline"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="FILTERING SYSTEM"
                android:textColor="@color/main_green"
                android:fontFamily="@font/bebasneuebold"
                android:textSize="18dp"
                android:layout_marginTop="25dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"

                android:text="Select day"
                android:textColor="@color/white"

                android:textSize="14dp"
                />

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipGroupSelectDay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                >
                <com.google.android.material.chip.Chip
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/chipMonday"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    app:checkedIconTint="@color/main_green"
                    android:text="Monday"/>

                <com.google.android.material.chip.Chip
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/chipTuesday"
                    style="@style/Widget.MaterialComponents.Chip.Choice"

                    android:text="Tuesday"/>
                <com.google.android.material.chip.Chip
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/chipWednesday"
                    style="@style/Widget.MaterialComponents.Chip.Choice"

                    android:text="Wednesday"/>
                <com.google.android.material.chip.Chip
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/chipThursday"
                    style="@style/Widget.MaterialComponents.Chip.Choice"

                    android:text="Thursday"/>
                <com.google.android.material.chip.Chip
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/chipFriday"
                    style="@style/Widget.MaterialComponents.Chip.Choice"

                    android:text="Friday"/>
                <com.google.android.material.chip.Chip
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/chipSaturday"
                    style="@style/Widget.MaterialComponents.Chip.Choice"

                    android:text="Saturday"/>
                <com.google.android.material.chip.Chip
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/chipSunday"
                    style="@style/Widget.MaterialComponents.Chip.Choice"

                    android:text="Sunday"/>
            </com.google.android.material.chip.ChipGroup>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"

                android:text="Select time of the day"
                android:textColor="@color/white"

                android:textSize="14dp"
                />

            <TimePicker
                android:id="@+id/filteringTimePicker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:scaleX="0.7"
                android:scaleY="0.7"
                >
            </TimePicker>

            <Button
                android:id="@+id/confirmFilteringSystemConfig"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Confirm"

                android:background="@drawable/rounded_background"
                >

            </Button>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"


                android:textColor="@color/white"

                android:textSize="14dp"
                />

        </LinearLayout>
    </ScrollView>
</FrameLayout>